doctype html
html
  head
    meta(charset = 'utf-8')
    meta(name='viewport', content="initial-scale=1.0, width=device-width")
    title Webpack app
    link(rel='stylesheet', href='dist/css/main.css')
  body
    header.header
      nav.navbar
        .container
          button#sidebarCollapse.btn.btn-light.btn-violet.pull-left
            i.fa.fa-bars
          a(class='navbar-brand mx-auto' href='/') Company Logo
          .dropdown.show
            a(class='nav-link dropdown-toggle btn-violet' href='#' id='navbarLang' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false') Options
            div(class='dropdown-menu' aria-labelledby='navbarLang')
              a(class='dropdown-item' href='#') Lang RU
              a(class='dropdown-item' href='#') Lang ENG
    section#main.container
      section#sidebar
        include modules/left-menu.pug
      section#content.container-fluid
        .row
            .col-4.col-lg-3.d-none.d-md-block
                .first-content
                  .first-content__item
                    .first-content__logo
                    .first-content__text
            .col
                .second-content
            .col-4.col-lg-3.d-none.d-lg-block
                .third-content
                  .third-content__item
    footer.footer.d-flex.align-items-center
      .container
        .footer-copyright.float-left 
          i.fa.fa-copyright 
          span  Copyright 2017
        .footer-right.float-right
          button.btn.btn-light.btn-violet
            i.far.fa-save
            span  Save
          button.btn.btn-light.btn-back 
            i.fa.fa-reply
            span  Back


    script(src='dist/js/app.js')